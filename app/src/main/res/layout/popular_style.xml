<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    android:layout_width="120dp"
    android:background="@drawable/card_bg"
    android:layout_height="115dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shop_food_img"
        android:layout_width="70dp"
        android:layout_height="61dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/profile"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Food Name"
        android:textColor="#250707"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/shop_food_img"
        app:layout_constraintStart_toStartOf="@+id/shop_food_img"
        app:layout_constraintTop_toBottomOf="@+id/shop_food_img" />

</androidx.constraintlayout.widget.ConstraintLayout>
