<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    xmlns:ndroid="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/splash"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Food Green" />

    <ImageView
        android:layout_below="@+id/textView18"
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/profile"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Hello Customer,"
        android:textColor="#E91E63"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        ndroid:textColor="#E91E63"
        android:textSize="16sp"
        android:text="Are you sure to order this food?" />

    <TextView
        android:id="@+id/btn_yes"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView14"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/yes_bg"
        android:text="Yes"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/btn_no"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="No"
        android:layout_toLeftOf="@+id/btn_yes"
        android:layout_marginRight="25dp"
        android:background="@drawable/no_bg"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/textView14"/>


</RelativeLayout>