<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:background="@drawable/shop_card_bg"
    android:layout_marginBottom="10dp"
    android:layout_height="320dp">

    <ImageView
        android:id="@+id/shop_img"
        android:layout_width="342dp"
        android:layout_height="189dp"
        android:layout_marginTop="8dp"
        android:alpha="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_open_time"
        app:srcCompat="@drawable/shop1" />

    <TextView
        android:id="@+id/shop_open_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="Everyday, from 9am to 5pm"
        android:textColor="#0C0000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/late_order"
        android:gravity="center"
        android:text="To Order Later"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shop_img"
        app:layout_constraintEnd_toEndOf="@+id/shop_img"
        app:layout_constraintStart_toStartOf="@+id/shop_img"
        app:layout_constraintTop_toTopOf="@+id/shop_img" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Restaurant name"
        android:textColor="#0C0000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_img" />

    <TextView
        android:id="@+id/shop_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="550 meter"
        android:textColor="#0C0000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/shop_name"
        app:layout_constraintTop_toBottomOf="@+id/shop_name" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/shop_long"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shop_name"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/shop_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="4.5"
        android:textColor="#0C0000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shop_long"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shop_long" />
</androidx.constraintlayout.widget.ConstraintLayout>